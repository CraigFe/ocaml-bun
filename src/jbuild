(jbuild_version 1)

(executables
 ((names (bun mon))
  (libraries (bos cmdliner fpath rresult astring spawn)))
)

(install
 ((section bin)
  (files ((bun.exe as bun) (mon.exe as mon)))
))

(alias
 ((name runtest)
  (deps (bun.exe mon.exe))
  (action (run bun "-v"
            "--input=../../../test/input"
            "--output=../../../test/output"
            "--"
            ${bin:mon} "-H" "--oneshot"))))
