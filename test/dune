(executable
 (name short)
 (ocamlopt_flags -afl-instrument)
 (modules short)
 (libraries crowbar))

(executable
 (name long)
 (ocamlopt_flags -afl-instrument)
 (modules long)
 (libraries crowbar))

(alias
 (name runtest)
 (deps ../src/bun.exe short.exe)
 (action
  (run timeout 2s ../src/bun.exe -vv ./short.exe)))

(alias
 (name longtest)
 (deps ../src/bun.exe long.exe)
 (action
  (run timeout 65s ../src/bun.exe -vv ./long.exe)))
